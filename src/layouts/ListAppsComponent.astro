---
import { marked } from "marked";

import type { Item } from "../types/types";

interface Props {
  section: Item;
  bgClass?: string;
  iconBg?: string;
  iconFill?: string;
}

const { section, iconBg, iconFill, bgClass } = Astro.props;
---

<div class=`${bgClass} rounded-3xl mr-0 md:mr-2 mt-4`>
  <div class="list-apps py-8 px-8 flex flex-col justify-between items-center h-full">

    <div class="flex flex-col items-center">
      <div class=`w-[64px] h-[64px] ${iconFill} mb-4`>
        <slot />
      </div>

      <div
        class="uppercase text-lg mb-6"
        set:html={marked.parseInline(section.title ?? "")}
      />
      <div
        class="text-center pb-8 px-0 leading-6"
        set:html={marked.parseInline(section.content ?? "")}
      />
    </div>

    <div class="card-button flex flex-col items-center">
      <div class="text-white">
        {
          section.button && (
            <a
              class="flex justify-center items-center "
              href={section.button?.link ?? ""}
            >
              {section.button?.title ?? ""}
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>
