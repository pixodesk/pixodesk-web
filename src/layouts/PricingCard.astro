---
import { marked } from "marked";
import type { PriceForApp } from "../types/types";

interface Props {
  pricingCardInfo: PriceForApp;
}
const { pricingCardInfo } = Astro.props;
---


<div class="flex flex-col items-center justify-between h-full text-left mb-6 ">
   
  <div class="flex flex-col items-start justify-start mb-4 text-base-bright">
    
    
    <div class="flex items-center mb-8">
      
      <div class="w-10 h-10 mr-2 slot">
        <slot />
      </div>
        
      <div class="title">
      {
        pricingCardInfo.title ? (
          <div
            class=""
            set:html={marked(pricingCardInfo.title)}
          />
        ) : null
      }
      </div>
    </div>

    {
      pricingCardInfo.platform ? (
        <div
          class="mb-6"
          set:html={marked(pricingCardInfo.platform)}
        />
      ) : null
    }
    
    {
      pricingCardInfo.price ? (
        <h3
          class={`mb-0 price font-bold text-3xl `}
          set:html={marked(pricingCardInfo.price)}
        />
      ) : null
    }
    
    {
      pricingCardInfo.paymentMethod ? (
        <div
          class="uppercase mb-6 text-sm text-violet-lightest"
          set:html={marked(pricingCardInfo.paymentMethod)}
        />
      ) : null
    }
    
    {
      pricingCardInfo.otherPaymentMethod ? (
        <div
          class="mb-6 text-sm text-violet-lightest"
          set:html={marked(pricingCardInfo.otherPaymentMethod)}
        />
    ) : null
    }
    

    

    {
      pricingCardInfo.appDescription ? (
        <div
          class="mb-8"
          set:html={marked(pricingCardInfo.appDescription)}
        />
      ) : null
    }
  </div>



  <div>
  <!-- Buttons -->
    {pricingCardInfo.button && (
        <div class="flex justify-center items-center w-full">
          
          <div class="w-40 button">
            <a
              href={pricingCardInfo.button.link}
              class=`
                flex 
                justify-center 
                items-center
                ${pricingCardInfo.icon === "svg" ? "bg-violet-light" : "" }
                ${pricingCardInfo.icon === "svg" ? "hover:bg-violet-base": "" }
                ${pricingCardInfo.icon === "2d" ? "bg-violet-light" : ""}
                ${pricingCardInfo.icon === "2d" ? "hover:bg-violet-base" : "" }
                ${pricingCardInfo.icon === "svga" ? "bg-violet-light" : ""}
                ${pricingCardInfo.icon === "svga" ? "hover:bg-violet-base" : "" }
                text-white 
                px-4 py-2 
                rounded-md 
                shadow-md 
                transition-all 
                duration-200
                w-full
                `
              set:html={marked(pricingCardInfo.button.title)}
            />
          </div>
        
        </div>
      )}
  </div>
</div>
